#
# Benchmark script configuration file. Some of the tests require some system specific options to run. Please see benchmark.ini.template for list of available options.
#

[DEFAULT]

# how many jobs daemon can run on host machine (this is not related to HPC jobs)
cpu_count = 24

# how many memory in GB daemon can use on host machine (approximation, float)
memory = 64

[config]  # additional config-options for various tests. All this fields will be pass as keys in 'config' function argument

# user name and email for user who submitted this test
user_name  = Jane Roe
user_email = jane.roe@university.edu

# HPC Driver, might have one of the following values: MultiCore, Condor
hpc_driver = MultiCore

# when running by daemons branch:revision will be set to appropriate values to represent currently checked version of main repository
branch = unknown
revision = 42

# path to directory where test results will be stored
results_root = %(here)s/results

# Path to boost python library (Required for most PyRosetta builds and tests)
#boost_python_library = /Users/benchmark/G/PyRosetta.develop.boost-1.55/PyRosetta.Develop.64/lib/libboost_python.dylib

# Path to release's dir-tree
release_dir = ./results/_release_

release_root = ./results/_release_

# deprecated
conda_token = your-conda-token


# path to local ncbi_blast_plus
ncbi_blast_plus = /Users/benchmark/prefix/ncbi-blast-2.9.0+/bin/blastp

# path to fragment_picking_database
fragment_picking_database = /home/benchmark/prefix/fragment_picking_database/2019.05.19
